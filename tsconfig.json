{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
    },
    "include": [
        "src/**/*.ts",
        "srs/**/*.d.ts"
    ]
  }